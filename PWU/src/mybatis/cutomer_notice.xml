	<insert id="insert" parameterType="vo.BH.Customer">
		insert into notice(notice_num.nextval,title,content,lev)
		values(notice_num.nextval,#{title},#{content},#{lev})
	</insert>
	

	<update id="update">
		UPDATE notice SET
			writer=#{writer}
			title=#{title}
			content=#{content}
			reg_date=#{reg_date}
		where num=#{num} LIMIT 1
	</update>
	
	<delete id="delete">
		DELETE FROM notice where num = #{num}
	</delete>

	<select id="select">
		SELECT * FROM notice
	</select>
	
	<select id="selectOne">
		SELECT * FROM notice where num=#{num}
	</select>


</mapper>

