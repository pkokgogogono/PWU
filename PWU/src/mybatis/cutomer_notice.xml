	<insert id="insert" parameterType="vo.BH.Customer">
		insert into notice(num,title,content,WRITER,reg_date)
		values(notice_num.nextval,#{title},#{content},#{writer},sysdate)
	</insert>

	<update id="update">
		UPDATE notice SET
			writer=#{writer}
			title=#{title}
			content=#{content}
			reg_date=#{reg_date}
		where num=#{num} LIMIT 1
	</update>
	
	<delete id="delete" parameterType="Integer">
		DELETE FROM notice where num = #{num}
	</delete>

	<select id="selectList" resultType="vo.BH.Customer" >
		SELECT * FROM notice
	</select>
	
	<select id="selectOne" parameterType="Integer"  resultType="int">
		SELECT * FROM notice where num=#{num}
	</select>


</mapper>

